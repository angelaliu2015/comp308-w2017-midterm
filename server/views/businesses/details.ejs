<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Contact Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Contact Name" name="contactname" value="<%= businesses.contactname %>" required>
              </div>
              <div class="form-group">
                <label for="EmailTextField">Contact Email</label>
                <input type="text" class="form-control" id="CostTextField"
                placeholder="Contact email" name="contactemail" value="<%= businesses.contactemail %>"  required>
              </div>
              <div class="form-group">
                <label for="PhoneTextField">Contact Phone</label>
                <input type="text" class="form-control" id="RatingTextField"
                placeholder="Contact phone" name="contactphone" value="<%= businesses.contactphone %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/businesses" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
