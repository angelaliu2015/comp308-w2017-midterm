<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h3>Business Contact List </h3>
          <a href="/businesses/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Business Contact</a>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Contact Name</th>
              <th class="text-center">Contact Email</th>
              <th class="text-center">Contact Phone</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
            <!-- Template Row -->
            <% for (let count = 0; count < businesses.length; count++) { %>
            <tr>
              <td class="text-center"><%= businesses[count].contactname %></td>
              <td class="text-center"><%= businesses[count].contactemail %></td>
              <td class="text-center"><%= businesses[count].contactphone %></td>
              <td class="text-center">
              <a href="/businesses/<%= businesses[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Update </a>
               </td>
              <td class="text-center">
              <a href="/businesses/delete/<%= businesses[count]._id %>" class="btn btn-secondary">
              <i class="fa fa-trash-o"></i> Remove </a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


